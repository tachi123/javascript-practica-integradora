<h1>Lista de Productos</h1>
<ul>
    {{#each products}}
    <li>
        <h2>{{this.nombre}}</h2>
        <p>Precio: ${{this.precio}}</p>
        <p>Descripci√≥n: {{this.descripcion}}</p>
        <a href="product/{{this._id}}">Ver detalle</a>
        <form action="/product/{{this._id}}?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit">Eliminar</button>
        </form>
    </li>
    {{/each}}
</ul>